{
  "name": "serve-opg",
  "version": "0.0.1",
  "description": "OPG Digital Court of Protection Order Serving Service",
  "repository": "https://github.com/ministryofjustice/serve-opg",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^29.7.0",
    "core-js": "^3.0.0",
    "del": "^3.0.0",
    "dropzone": "5.9.3",
    "esbuild": "^0.25.5",
    "fetch-mock": "^10.1.1",
    "file-loader": "^6.0.0",
    "govuk-frontend": "^5.13.0",
    "jest": "^29.7.0",
    "jquery": "^3.5.0",
    "node-fetch": "^2.6.7",
    "sass": "^1.86.1",
    "tar": "6.2.1"
  },
  "scripts": {
    "jest": "jest assets/js/__tests__ --verbose",
    "clear-jest-cache": "jest --clearCache",
    "build-dev": "node deps-builder.js",
    "build": "node deps-builder.js production"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/*.+\\.js$"
    ]
  }
}
