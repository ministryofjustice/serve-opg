{
  "name": "serve-opg",
  "version": "0.0.1",
  "description": "OPG Digital Court of Protection Order Serving Service",
  "repository": "https://github.com/ministryofjustice/serve-opg",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "dropzone": "5.9.3",
    "esbuild": "^0.25.5",
    "fetch-mock": "^11.1.1",
    "govuk-frontend": "^5.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fixed-jsdom": "^0.0.10",
    "jquery": "^3.5.0",
    "sass": "^1.86.1"
  },
  "scripts": {
    "jest": "jest assets/js/__tests__ --verbose",
    "clear-jest-cache": "jest --clearCache",
    "build-dev": "node deps-builder.js",
    "build": "node deps-builder.js production"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "restoreMocks": true,
    "testEnvironment": "jest-fixed-jsdom",
    "testRegex": "\\.test\\.js$"
  }
}
